# WebP Safe Migrator - Environment Configuration
# Copy this file to .env and customize as needed

# WordPress Configuration
WORDPRESS_VERSION=latest
PHP_VERSION=8.2

# Domain Configuration
CUSTOM_DOMAIN=localhost
# For custom domain, add to your hosts file:
# 127.0.0.1 webp-migrator.local

# SSL Configuration
ENABLE_SSL=true

# Database Configuration
MYSQL_DATABASE=wordpress_webp_test
MYSQL_USER=wordpress
MYSQL_PASSWORD=wordpress123
MYSQL_ROOT_PASSWORD=root123

# Port Configuration (uncomment to use non-standard ports)
# HTTP_PORT=8080
# HTTPS_PORT=8443
# MYSQL_PORT=3307
# PHPMYADMIN_PORT=8082

# WordPress Debug Settings
WORDPRESS_DEBUG=1
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false
SCRIPT_DEBUG=true

# Plugin Configuration
WEBP_MIGRATOR_DEV_MODE=true
WEBP_MIGRATOR_LOG_LEVEL=debug

# Performance Settings
WP_MEMORY_LIMIT=512M
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=100M
PHP_POST_MAX_SIZE=100M

# Container Engine (docker or podman)
CONTAINER_ENGINE=docker

# Web Server (apache or nginx)
WEB_SERVER=apache
